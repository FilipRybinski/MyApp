{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.ReverseProxy": "Debug"
    }
  },
  "ReverseProxy": {
    "Routes": [
      {
        "RouteId": "Identity",
        "ClusterId": "IdentityCluster",
        "Match": {
          "Path": "/api/Identity/{**catch-all}"
        }
      },
      {
        "RouteId": "FeatureFlags",
        "ClusterId": "FeatureFlagsCluster",
        "Match": {
          "Path": "/api/FeatureFlags/{**catch-all}"
        }
      },
      {
        "RouteId": "Notification",
        "ClusterId": "NotificationCluster",
        "Match": {
          "Path": "/api/Notification/{**catch-all}"
        }
      }
    ],
    "Clusters": [
      {
        "ClusterId": "IdentityCluster",
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:5165/"
          }
        }
      },
      {
        "ClusterId": "FeatureFlagsCluster",
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:5062/"
          }
        }
      },
      {
        "ClusterId": "NotificationCluster",
        "Destinations": {
          "destination1": {
            "Address": "http://localhost:8080/"
          }
        }
      }
    ]
  }
}
